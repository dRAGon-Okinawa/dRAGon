        "tags": [
          "Document Repository"
        ],
        "summary": "List Documents of a Silo",
        "description": "Returns Documents entities about a Silo.",
        "operationId": "listDocumentsOfSilo",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "description": "Identifier of the Silo",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit number of results",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Skip x results",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          }
